<form action="/auth/profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data">
 <div class="container py-4">
  {{errorMessage}}
  <div class="row mb-4">
    <label for="username" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input placeholder="Username" type="username" class="form-control" id="username" name="username" value="{{user.username}}">
    </div>
  </div>
    <div class="row mb-4">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input placeholder="Email"type="email" class="form-control" id="inputEmail3" name="email" value="{{user.email}}">
    </div>
  </div>
  <div class="row mb-4">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input placeholder="Password"type="password" class="form-control" id="inputPassword3" name="password" aria-describedby="passwordHelpBlock" value="{{user.password}}">
      <small id="passwordHelpBlock" class="form-text text-muted">
  Your password must be 6 characters long.
</small>
    </div>
  </div>
  <div class="row mb-4">
    <label for="repeatpassword" class="col-sm-2 col-form-label">Repeat password</label>
    <div class="col-sm-10">
      <input placeholder="Repeat password"type="password" class="form-control" id="inputPassword3" name="repeatpassword" aria-describedby="passwordHelpBlock" value="{{user.password}}">
      <small id="passwordHelpBlock" class="form-text text-muted">
  Your password must be 6 characters long and same as password.
</small>
    </div>
  </div>
  <div class="row mb-4">
    <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <div class="form-check">
          {{#if status }}
        <input class="form-check-input" type="checkbox" name="notification" value="on" checked>
        <label class="form-check-label" for="notification" >
        I want to receive an email when other user post an offer
        </label>
        {{else}}
                <input class="form-check-input" type="checkbox" name="notification" value="on">
        <label class="form-check-label" for="notification" >
        I want to receive an email when other user post an offer
        </label>
        {{/if}}
      </div>
    </div>
    </div>
  </div>
    <div class="row mb-3">
         <label class="col-sm-2" for="imagen">Edit your profile image</label>
         <div class="col-sm-10">
         <input type="file" name="imagen" id="imagen"/>
         </div>
    </div>
  </div>
</div>
  <button type="submit" class="btn btn-primary bt-lg">Update profile</button>
</form>
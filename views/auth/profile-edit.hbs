{{>nav}}

<form action="/auth/profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data">
  
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail3" name="email" value="{{user.email}}">
    </div>
  </div>
  <div class="row mb-3">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" name="password" value="{{user.password}}">
    </div>
  </div>
  <div class="row mb-3">
    <label for="repeatpassword" class="col-sm-2 col-form-label">Repeat password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" name="repeatpassword" value="{{user.password}}">
    </div>
  </div>
  <fieldset class="row mb-3">
    <legend class="col-form-label col-sm-2 pt-0">Deals updates</legend>
  </fieldset>
  <div class="row mb-3">
    <div class="col-sm-10 offset-sm-2">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck1">
        <label class="form-check-label" for="gridCheck1">
        I want to receive an email when other user post an offer
        </label>
      </div>
    </div>
    <div>
         <label for="imagen">Upload your Image</label>
         <input type="file" name="imagen" id="imagen"/>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update profile</button>
</form>
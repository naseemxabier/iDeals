  <div class="login">
    
  <form class="form_container" action="/auth/login" method="POST">
  <div class="logo_container"><img class="logo_container w-60 h-60" src="/images/bombillita.png" alt="Bombilla"></div>
  <div class="title_container">
    <p class="title">Login to your Account in iDeals</p>
    <span class="subtitle">Get the best deals in your city!</span>
  </div>
  <br>
  <div class="input_container">
    <label type="text" name="username" placeholder="Your username">Username</label>
    <input placeholder="yourusername" title="Inpit title" name="username" type="text" class="input_field">
  </div>
  <div class="input_container">
    <label type="password" name="password" placeholder="Your password">Password</label>
    <input placeholder="Password" title="Inpit title" name="password" type="password" class="input_field" id="password_field">
  </div>
  <button title="Sign In" type="submit" class="sign-in_btn">
    <span>Log In</span>
  </button>
  <div class="separator">
    <hr class="line">
    <span>Or</span>
    <hr class="line">
  </div>
  <button title="Sign In" type="submit" class="sign-in_ggl">
    <svg height="18" width="18" viewBox="0 0 32 32" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg">
      <clipPath id="B">
          <span><a href ="/auth/signup">Sign Up!</a></span>
      </clipPath>
    </svg>
  
  </button>
  </form>
  
  </div>
</div>

{{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
{{/if}}
   

   
  









